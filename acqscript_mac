#! /bin/bash
export DYLD_LIBRARY_PATH=/Volumes/Untitled/installs/lib

date=('140117' '140122' '140129' '140205' '140314' '140409' '140416' '140424' '140502' '140515' '140528' '140606' '140613' '140625'        '140707' '140711' '140718' '140723' '140730' '140812' '140821' '140828' '140904' '140911' '140919' '140926' '141003' '141010' '141024'     '141029' '141107' '141114' '141121' '141128' '141215' '141222' '150111' '150216' '150226' '150305' '150312' '150315' '150320' '150327'     '150401' '150408' '150414' '150421' '150429' '150505' '150522' '150608' '150620' '150625' '150701' '150708' '150723' '150730' '150806'     '150813' '150820' '150827' '150902' '150910' '150918' '150929' '151008' '151019' '151027' '151105' '151111' '151118' '151127' '151209'     '151214' '151221' '160201' '160211' '160216' '160305' '160314' '160321' '160401' '160407' '160411' '160418' '160426' '160502' '160524'     '160601' '160606' '160616' '160620' '160715' '160719' '160725' '160801' '160808' '160816' '160821' '160829' '160906' '160912' '160923'     '160927' '161003' '161010' '161018' '161114' '161123' '161127' '161216' '161223' '170217' '170223' '170303' '170307' '170313' '170320'     '170327' '170403');

#in case it freezes on image retrieval
# run using ./acqscript date -

cont=true
tocopy=true
for d in "${date[@]}"
do
     if [[ "$1" == "$d" ]]; then
         cont=false
         if [[ "$2" == "-" ]]; then
            tocopy=false
         fi
     fi

    if [ "$cont" = false ]; then
        if [[ "$tocopy" == true ]]; then
            echo `cp -r /home/shaneg/results/origin/$d /home/shaneg/results/maps_MC/`
        fi

        for i in `seq 1 10`;
        do
            ./build/consec $d - 0
        done
  
        ./build/consec $d - 1 &> /home/shaneg/results/maps_MC/$d/opt-$d.log

        tocopy=true
  fi
done
